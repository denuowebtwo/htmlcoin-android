<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="@drawable/background_popup_dark"
              android:padding="16dp"
              android:clickable="true"
              android:focusableInTouchMode="true"
              android:layout_height="match_parent">

    <org.qtum.wallet.utils.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxLines="1"
        android:layout_margin="16dp"
        android:text="@string/transfer_balance"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/worksans_bold"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:theme="@style/InputTextBlack"
        android:textColorHint="@color/white">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_amount"
            android:layout_marginStart="-4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="left"
            android:hint="@string/amount"
            android:inputType="numberDecimal"
            android:textColor="@color/white"/>
    </android.support.design.widget.TextInputLayout>

    <org.qtum.wallet.utils.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:paddingBottom="4dp"
        android:fontFamily="@font/worksans_regular"
        android:textColor="@color/white"
        android:text="@string/to"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <org.qtum.wallet.utils.FontTextView
            android:paddingBottom="4dp"
            android:fontFamily="@font/worksans_regular"
            android:id="@+id/tv_address_to"
            android:layout_width="0dp"
            android:maxLines="1"
            android:ellipsize="middle"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="left"
            android:layout_weight="1"
            android:textSize="16sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/white"/>

    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:id="@+id/spinner_transfer">

    </android.support.v7.widget.AppCompatSpinner>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp">

        <org.qtum.wallet.utils.FontButton
            android:id="@+id/bt_back"
            android:layout_width="wrap_content"
            style="@style/ButtonStyle.PopupLightBlue"
            android:layout_marginRight="8dp"
            android:text="@string/cancel"
            android:layout_weight="1"
            />

        <org.qtum.wallet.utils.FontButton
            android:id="@+id/bt_transfer"
            android:layout_width="wrap_content"
            android:gravity="center"
            style="@style/ButtonStyle.Popup"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="@string/transfer"/>
    </LinearLayout>

</LinearLayout>