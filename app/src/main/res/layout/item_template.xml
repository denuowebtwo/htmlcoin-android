<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/root_layout"
                android:clickable="true"
                android:background="@color/color_custom_dark"
                android:layout_width="match_parent"
                android:layout_height="60dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/date">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:id="@+id/title_container">
            <org.qtum.wallet.utils.FontTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="180dp"
                android:paddingRight="4dp"
                android:text="@string/about"
                android:textSize="18sp"
                android:fontFamily="@font/worksans_regular"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:layout_height="match_parent" />

            <org.qtum.wallet.utils.FontTextView
                android:id="@+id/contract_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/title"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="23dp"
                android:background="@drawable/background_chipview_dark"
                android:ellipsize="end"
                android:fontFamily="@font/worksans_regular"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="2dp"
                android:text="@string/about"
                android:textColor="@color/color_custom_dark"
                android:textSize="12sp" />
        </LinearLayout>



    </RelativeLayout>



    <ImageView
        android:id="@+id/arrow"
        app:srcCompat="@drawable/icon_setting_arrow"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:layout_marginEnd="8dp"
        android:tint="@color/white"
        android:layout_width="16dp"
        android:layout_height="16dp" />

    <org.qtum.wallet.utils.FontTextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="@string/about"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/worksans_regular"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/arrow"/>



    <View
        android:layout_alignParentBottom="true"
        android:background="@color/section_divider_color_dark"
        android:layout_marginStart="4dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>